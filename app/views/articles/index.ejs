<% extend('../layout') %>

<div class="articles center-align container">
    <h1><%= title %></h1>
    <div class="row">
        <% for(var i = 0; i < articles.length; i++) { %>
        <div class="col s12 m6">
            <div class="card">
                <div class="card-image waves-effect waves-block waves-light">
                    <img class="activator" src="http://materializecss.com/images/sample-1.jpg">
                </div>
                <div class="card-content">
                    <a class="view-button" href="articles/<%= articles[i].id %>"><i class="fa fa-eye" aria-hidden="true"></i></a>
                    <a class="edit-button" href="articles/<%= articles[i].id %>/edit"><i class="fa fa-pencil-square-o" aria-hidden="true"></i></a>
                    <span class="card-title activator grey-text text-darken-4">
                        <%= articles[i].title %>
                    </span>
                </div>
                <div class="card-reveal">
                    <span class="card-title grey-text text-darken-4">
                        <%= articles[i].title %>
                        <i class="material-icons right">close</i>
                    </span>
                    <p><%= articles[i].body %></p>
                </div>
            </div>
        </div>
        <%  } %>
    </div>
</div>